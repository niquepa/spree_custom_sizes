<% if @product.finishings.count > 0 %>
  <div class="row" id="finishings" data-hook>
    <div class="add-to-cart">
      <div class="col-md-10">
        <h4><%= Spree.t(:finishings_title) %>:</h4>
        <% @product.finishings.category.each do |category| %>
          <h5><%= category.presentation %></h5>
          <% @product.finishings.subcategory(category.id).each do |finishing| %>
            <h6><%= finishing.presentation %></h6>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>